@model DiversityPub.Models.Feedback
@{
    ViewData["Title"] = "Détails du Feedback";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-comment"></i> Détails du Feedback
                    @if (Model.EstMasque)
                    {
                        <span class="badge bg-warning ms-2">
                            <i class="fas fa-eye-slash"></i> Masqué
                        </span>
                    }
                </h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5 class="text-primary mb-3">
                            <i class="fas fa-star"></i> Évaluation
                        </h5>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Note :</label>
                            <div class="d-flex align-items-center">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= Model.Note)
                                    {
                                        <i class="fas fa-star text-warning fa-lg"></i>
                                    }
                                    else
                                    {
                                        <i class="far fa-star text-muted fa-lg"></i>
                                    }
                                }
                                <span class="ms-3 badge bg-primary fs-6">@Model.Note/5</span>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label fw-bold">Commentaire :</label>
                            <div class="border rounded p-3 bg-light">
                                @if (!string.IsNullOrEmpty(Model.Commentaire))
                                {
                                    <p class="mb-0">@Model.Commentaire</p>
                                }
                                else
                                {
                                    <p class="mb-0 text-muted">Aucun commentaire</p>
                                }
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label fw-bold">Date du feedback :</label>
                            <p class="mb-0">@Model.DateFeedback.ToString("dd/MM/yyyy à HH:mm")</p>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <h5 class="text-primary mb-3">
                            <i class="fas fa-bullhorn"></i> Informations de l'élément évalué
                        </h5>
                        
                        @if (Model.Campagne != null)
                        {
                            <div class="mb-3">
                                <label class="form-label fw-bold">Campagne :</label>
                                <div class="border rounded p-3 bg-light">
                                    <p class="mb-1"><strong>@Model.Campagne.Nom</strong></p>
                                    @if (!string.IsNullOrEmpty(Model.Campagne.Description))
                                    {
                                        <p class="mb-0 text-muted small">@Model.Campagne.Description</p>
                                    }
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label fw-bold">Client :</label>
                                <div class="border rounded p-3 bg-light">
                                    <p class="mb-1"><strong>@Model.Campagne.Client?.RaisonSociale</strong></p>
                                    <p class="mb-0 text-muted small">
                                        <i class="fas fa-envelope"></i> @Model.Campagne.Client?.EmailContactPrincipal
                                    </p>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label fw-bold">Période de la campagne :</label>
                                <p class="mb-0">
                                    Du @Model.Campagne.DateDebut.ToString("dd/MM/yyyy") 
                                    au @Model.Campagne.DateFin.ToString("dd/MM/yyyy")
                                </p>
                            </div>
                        }
                        else if (Model.Activation != null)
                        {
                            <div class="mb-3">
                                <label class="form-label fw-bold">Activation :</label>
                                <div class="border rounded p-3 bg-light">
                                    <p class="mb-1"><strong>@Model.Activation.Nom</strong></p>
                                    @if (!string.IsNullOrEmpty(Model.Activation.Description))
                                    {
                                        <p class="mb-0 text-muted small">@Model.Activation.Description</p>
                                    }
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label fw-bold">Campagne associée :</label>
                                <div class="border rounded p-3 bg-light">
                                    <p class="mb-1"><strong>@Model.Activation.Campagne?.Nom</strong></p>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label fw-bold">Client :</label>
                                <div class="border rounded p-3 bg-light">
                                    <p class="mb-1"><strong>@Model.Activation.Campagne?.Client?.RaisonSociale</strong></p>
                                    <p class="mb-0 text-muted small">
                                        <i class="fas fa-envelope"></i> @Model.Activation.Campagne?.Client?.EmailContactPrincipal
                                    </p>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label fw-bold">Date d'activation :</label>
                                <p class="mb-0">@Model.Activation.DateActivation.ToString("dd/MM/yyyy")</p>
                            </div>
                        }
                    </div>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.ReponseAdmin))
                {
                    <hr class="my-4">
                    
                    <div class="row">
                        <div class="col-12">
                            <h5 class="text-success mb-3">
                                <i class="fas fa-reply"></i> Réponse de l'équipe
                            </h5>
                            <div class="border rounded p-3 bg-success bg-opacity-10">
                                <p class="mb-2"><strong>@Model.ReponseAdmin</strong></p>
                                <small class="text-muted">
                                    <i class="fas fa-user"></i> Répondu par @Model.AdminRepondant 
                                    le @Model.DateReponseAdmin?.ToString("dd/MM/yyyy à HH:mm")
                                </small>
                            </div>
                        </div>
                    </div>
                }
                
                @if (Model.EstMasque)
                {
                    <hr class="my-4">
                    
                    <div class="row">
                        <div class="col-12">
                            <h5 class="text-warning mb-3">
                                <i class="fas fa-eye-slash"></i> Information de masquage
                            </h5>
                            <div class="border rounded p-3 bg-warning bg-opacity-10">
                                <p class="mb-2">
                                    <strong>Ce feedback a été masqué</strong>
                                </p>
                                <small class="text-muted">
                                    <i class="fas fa-user"></i> Masqué par @Model.AdminMasquant 
                                    le @Model.DateMasquage?.ToString("dd/MM/yyyy à HH:mm")
                                </small>
                            </div>
                        </div>
                    </div>
                }
                
                <hr class="my-4">
                
                <div class="d-flex justify-content-between">
                    <a href="@Url.Action("Index", "Feedback")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Retour à la liste
                    </a>
                    <div>
                        <a href="@Url.Action("Repondre", "Feedback", new { id = Model.Id })" class="btn btn-info">
                            <i class="fas fa-reply"></i> Répondre
                        </a>
                        @if (Model.EstMasque)
                        {
                            <form asp-action="Afficher" method="post" style="display: inline;">
                                <input type="hidden" name="id" value="@Model.Id" />
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-eye"></i> Afficher
                                </button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="Masquer" method="post" style="display: inline;">
                                <input type="hidden" name="id" value="@Model.Id" />
                                <button type="submit" class="btn btn-warning">
                                    <i class="fas fa-eye-slash"></i> Masquer
                                </button>
                            </form>
                        }
                        <a href="@Url.Action("Delete", "Feedback", new { id = Model.Id })" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Supprimer
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card-header {
        background: linear-gradient(135deg, #A32D18, #59311F);
        color: white;
    }
    
    .text-primary {
        color: #A32D18 !important;
    }
    
    .text-success {
        color: #28a745 !important;
    }
    
    .bg-light {
        background-color: #f8f9fa !important;
    }
    
    .border {
        border-color: #dee2e6 !important;
    }
</style> 