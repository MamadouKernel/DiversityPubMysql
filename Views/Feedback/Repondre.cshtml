@model DiversityPub.Models.Feedback
@{
    ViewData["Title"] = "Répondre au Feedback";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-reply"></i> Répondre au Feedback
                </h4>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h5><i class="fas fa-info-circle"></i> Informations du Feedback</h5>
                        <div class="mb-3">
                            <strong>Client :</strong> 
                            @if (Model.Campagne?.Client != null)
                            {
                                @Model.Campagne.Client.RaisonSociale
                            }
                            else if (Model.Activation?.Campagne?.Client != null)
                            {
                                @Model.Activation.Campagne.Client.RaisonSociale
                            }
                        </div>
                        <div class="mb-3">
                            <strong>Élément évalué :</strong>
                            @if (Model.Campagne != null)
                            {
                                <span class="badge bg-primary">Campagne</span>
                                <br />
                                @Model.Campagne.Nom
                            }
                            else if (Model.Activation != null)
                            {
                                <span class="badge bg-success">Activation</span>
                                <br />
                                @Model.Activation.Nom
                            }
                        </div>
                        <div class="mb-3">
                            <strong>Note :</strong>
                            <div class="d-flex align-items-center">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= Model.Note)
                                    {
                                        <i class="fas fa-star text-warning"></i>
                                    }
                                    else
                                    {
                                        <i class="far fa-star text-warning"></i>
                                    }
                                }
                                <span class="ms-2">(@Model.Note/5)</span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <strong>Date :</strong> @Model.DateFeedback.ToString("dd/MM/yyyy à HH:mm")
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h5><i class="fas fa-comment"></i> Commentaire du Client</h5>
                        <div class="alert alert-info">
                            @Model.Commentaire
                        </div>
                    </div>
                </div>

                <form asp-action="Repondre" method="post">
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="mb-3">
                        <label asp-for="ReponseAdmin" class="form-label">
                            <i class="fas fa-reply"></i> Votre réponse
                        </label>
                        <textarea asp-for="ReponseAdmin" class="form-control" rows="6" 
                                  placeholder="Tapez votre réponse au client..."></textarea>
                        <span asp-validation-for="ReponseAdmin" class="text-danger"></span>
                        <small class="form-text text-muted">
                            Cette réponse sera visible par le client dans son espace personnel.
                        </small>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ReponseAdmin))
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Attention :</strong> Une réponse existe déjà pour ce feedback. 
                            La nouvelle réponse remplacera l'ancienne.
                        </div>
                    }

                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Index", "Feedback")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Retour
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-paper-plane"></i> Envoyer la réponse
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 