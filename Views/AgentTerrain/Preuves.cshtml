@model IEnumerable<DiversityPub.Models.Media>
@{
    Layout = "_AgentLayout";
    ViewData["Title"] = "Mes Preuves";
    var agent = ViewBag.Agent as DiversityPub.Models.AgentTerrain;
    
    // Calculer les statistiques
    var totalPreuves = 0;
    var photos = 0;
    var videos = 0;
    var documents = 0;
    
    if (Model != null)
    {
        foreach (var media in Model)
        {
            totalPreuves++;
            if (media.Type == DiversityPub.Models.enums.TypeMedia.Photo)
                photos++;
            else if (media.Type == DiversityPub.Models.enums.TypeMedia.Video)
                videos++;
            else if (media.Type == DiversityPub.Models.enums.TypeMedia.Document)
                documents++;
        }
    }
}

<style>
    /* Override du layout pour cette page spécifique */
    .header {
        background: linear-gradient(135deg, #A32D18 0%, #EDAC00 100%) !important;
    }
    
    .nav-footer {
        background: linear-gradient(135deg, #A32D18 0%, #EDAC00 100%) !important;
    }
    
    .nav-btn {
        background: rgba(255,255,255,0.2) !important;
        border: 1px solid rgba(255,255,255,0.3) !important;
    }
    
    .nav-btn:hover {
        background: rgba(255,255,255,0.3) !important;
    }
    
    .nav-btn.active {
        background: rgba(255,255,255,0.4) !important;
    }
    
    /* Header personnalisé pour cette page */
    .page-header {
        background: linear-gradient(135deg, #A32D18 0%, #EDAC00 100%);
        color: white;
        padding: 2rem 1.5rem;
        margin: -1.5rem -1.5rem 2rem -1.5rem;
        border-radius: 0 0 20px 20px;
    }
    
    .page-header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    
    .page-title-section {
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    
    .page-icon {
        font-size: 2.5rem;
        color: white;
    }
    
    .page-title {
        color: white;
        font-size: 2rem;
        font-weight: 700;
        margin: 0;
    }
    
    .page-subtitle {
        color: rgba(255,255,255,0.9);
        font-size: 1.1rem;
        margin: 0;
    }
    
    .header-buttons {
        display: flex;
        gap: 1rem;
    }
    
    .header-btn {
        background: rgba(255,255,255,0.2);
        border: 1px solid rgba(255,255,255,0.3);
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .header-btn:hover {
        background: rgba(255,255,255,0.3);
        color: white;
        transform: translateY(-1px);
    }
    
    /* Cartes de statistiques */
    .stats-section {
        margin-bottom: 2rem;
    }
    
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
    }
    
    .stat-card {
        background: white;
        border-radius: 12px;
        padding: 1.5rem;
        text-align: center;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        border: 1px solid #e9ecef;
    }
    
    .stat-number {
        font-size: 2.5rem;
        font-weight: 700;
        color: #A32D18;
        margin-bottom: 0.5rem;
    }
    
    .stat-label {
        color: #6c757d;
        font-weight: 500;
        font-size: 0.9rem;
    }
    
    /* Zone de contenu vide */
    .empty-content {
        background: white;
        border-radius: 16px;
        padding: 3rem 2rem;
        text-align: center;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        margin-top: 2rem;
    }
    
    .empty-icon {
        font-size: 4rem;
        color: #dee2e6;
        margin-bottom: 1rem;
    }
    
    .empty-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 0.5rem;
    }
    
    .empty-subtitle {
        font-size: 1rem;
        color: #6c757d;
        margin-bottom: 2rem;
    }
    
    .cta-button {
        background: #A32D18;
        color: white;
        border: none;
        padding: 1rem 2rem;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        text-decoration: none;
    }
    
    .cta-button:hover {
        background: #8a2514;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(163, 45, 24, 0.3);
    }
    
    /* Responsive */
    @@media (max-width: 768px) {
        .page-header-content {
            flex-direction: column;
            gap: 1rem;
            text-align: center;
        }
        
        .header-buttons {
            flex-direction: column;
            width: 100%;
        }
        
        .stats-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }
</style>

<!-- Header personnalisé -->
<div class="page-header">
    <div class="page-header-content">
        <div class="page-title-section">
            <i class="fas fa-image page-icon"></i>
            <div>
                <h1 class="page-title">Mes Preuves</h1>
                <p class="page-subtitle">@(agent?.Utilisateur != null ? $"{agent.Utilisateur.Prenom} {agent.Utilisateur.Nom}" : "Agent")</p>
            </div>
        </div>
        <div class="header-buttons">
            <a href="@Url.Action("EnvoyerPreuve", "AgentTerrain")" class="header-btn">
                <i class="fas fa-plus"></i>
                Nouvelle Preuve
            </a>
        </div>
    </div>
</div>

<!-- Statistiques -->
<div class="stats-section">
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-number">@totalPreuves</div>
            <div class="stat-label">Total Preuves</div>
        </div>
        <div class="stat-card">
            <div class="stat-number">@photos</div>
            <div class="stat-label">Photos</div>
        </div>
        <div class="stat-card">
            <div class="stat-number">@videos</div>
            <div class="stat-label">Vidéos</div>
        </div>
        <div class="stat-card">
            <div class="stat-number">@documents</div>
            <div class="stat-label">Documents</div>
        </div>
        <div class="stat-card" style="background: linear-gradient(135deg, #A32D18, #EDAC00); color: white; border: none;">
            <div style="display: flex; flex-direction: column; align-items: center; justify-content: center; height: 100%;">
                <a href="@Url.Action("EnvoyerPreuve", "AgentTerrain")" 
                   style="color: white; text-decoration: none; display: flex; flex-direction: column; align-items: center; gap: 0.5rem;">
                    <i class="fas fa-plus fa-2x"></i>
                    <span style="font-weight: 600;">Nouvelle Preuve</span>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Contenu principal -->
@if (Model != null && Model.Any())
{
    <div class="content-card">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
            <h3 class="page-title" style="margin: 0;">Liste des Preuves</h3>
            <a href="@Url.Action("EnvoyerPreuve", "AgentTerrain")" class="cta-button">
                <i class="fas fa-plus"></i>
                Ajouter une Preuve
            </a>
        </div>
        <div class="row">
            @foreach (var media in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="content-card">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h6 class="mb-0">@media.Description</h6>
                            <div class="d-flex gap-2">
                                <span class="badge @GetTypeBadgeClass(media.Type)">
                                    @GetTypeText(media.Type)
                                </span>
                                <span class="badge @GetValidationBadgeClass(media.Valide)">
                                    @GetValidationText(media.Valide)
                                </span>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-calendar text-info me-2"></i>
                                <strong>@media.DateUpload.ToString("dd/MM/yyyy")</strong>
                            </div>
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-clock text-warning me-2"></i>
                                <strong>@media.DateUpload.ToString("HH:mm")</strong>
                            </div>
                            @if (media.Activation != null)
                            {
                                <div class="d-flex align-items-center mb-2">
                                    <i class="fas fa-map-marker-alt text-primary me-2"></i>
                                    <small class="text-muted">@media.Activation.Nom</small>
                                </div>
                            }
                        </div>
                        
                        @if (!string.IsNullOrEmpty(media.Description))
                        {
                            <p class="text-muted mb-3">
                                <i class="fas fa-info-circle me-1"></i>
                                @media.Description
                            </p>
                        }
                        
                        <div class="d-flex gap-2">
                            <a href="@Url.Action("DetailsPreuve", "AgentTerrain", new { id = media.Id })" 
                               class="btn btn-primary-custom flex-fill">
                                <i class="fas fa-eye"></i> Voir Détails
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="empty-content">
        <i class="fas fa-image empty-icon"></i>
        <h3 class="empty-title">Aucune preuve trouvée</h3>
        <p class="empty-subtitle">Vous n'avez pas encore envoyé de preuves.</p>
        <a href="@Url.Action("EnvoyerPreuve", "AgentTerrain")" class="cta-button">
            <i class="fas fa-plus"></i>
            Envoyer une Preuve
        </a>
    </div>
}

@functions {
    public string GetTypeBadgeClass(DiversityPub.Models.enums.TypeMedia type)
    {
        return type switch
        {
            DiversityPub.Models.enums.TypeMedia.Photo => "bg-success",
            DiversityPub.Models.enums.TypeMedia.Video => "bg-info",
            DiversityPub.Models.enums.TypeMedia.Document => "bg-warning",
            _ => "bg-secondary"
        };
    }

    public string GetTypeText(DiversityPub.Models.enums.TypeMedia type)
    {
        return type switch
        {
            DiversityPub.Models.enums.TypeMedia.Photo => "Photo",
            DiversityPub.Models.enums.TypeMedia.Video => "Vidéo",
            DiversityPub.Models.enums.TypeMedia.Document => "Document",
            _ => "Inconnu"
        };
    }

    public string GetValidationBadgeClass(bool valide)
    {
        return valide ? "bg-success" : "bg-warning";
    }

    public string GetValidationText(bool valide)
    {
        return valide ? "Validé" : "En attente";
    }
} 