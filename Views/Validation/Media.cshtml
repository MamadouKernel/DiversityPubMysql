@model IEnumerable<DiversityPub.Models.Media>

@{
    ViewData["Title"] = "Validation des Médias";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-images me-2"></i>
                        Validation des Médias
                    </h4>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                            <h5 class="mt-3 text-muted">Aucun média en attente de validation</h5>
                            <p class="text-muted">Tous les médias ont été validés ou rejetés.</p>
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            @foreach (var media in Model)
                            {
                                <div class="col-md-6 col-lg-4 mb-4">
                                    <div class="card h-100 shadow-sm">
                                        <div class="card-header bg-light">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <h6 class="mb-0">
                                                    <i class="fas fa-file-image text-primary me-2"></i>
                                                    @media.Type
                                                </h6>
                                                <small class="text-muted">
                                                    @media.DateUpload.ToString("dd/MM/yyyy HH:mm")
                                                </small>
                                            </div>
                                        </div>
                                        
                                        <div class="card-body">
                                            <div class="mb-3">
                                                <strong>Campagne:</strong> @media.Activation?.Campagne?.Nom
                                            </div>
                                            <div class="mb-3">
                                                <strong>Lieu:</strong> @(media.Activation?.Lieu != null ? $"{media.Activation.Lieu.Nom} - {media.Activation.Lieu.Adresse}" : "Non défini")
                                                @if (!string.IsNullOrEmpty(media.Activation?.Lieu?.Adresse))
                                                {
                                                    <br><small class="text-muted"><i class="fas fa-map-marker-alt"></i> @media.Activation.Lieu.Adresse</small>
                                                }
                                            </div>
                                            <div class="mb-3">
                                                <strong>Agent:</strong> @media.AgentTerrain?.Utilisateur?.Nom @media.AgentTerrain?.Utilisateur?.Prenom
                                            </div>
                                            
                                            @if (!string.IsNullOrEmpty(media.Description))
                                            {
                                                <div class="mb-3">
                                                    <strong>Description:</strong>
                                                    <p class="text-muted mb-0">@media.Description</p>
                                                </div>
                                            }

                                            @if (media.Type == DiversityPub.Models.enums.TypeMedia.Photo)
                                            {
                                                <div class="text-center mb-3">
                                                    <img src="@media.Url" alt="Média" class="img-fluid rounded" style="max-height: 200px; object-fit: cover;" />
                                                </div>
                                            }
                                            else if (media.Type == DiversityPub.Models.enums.TypeMedia.Video)
                                            {
                                                <div class="text-center mb-3">
                                                    <video controls class="w-100" style="max-height: 200px;">
                                                        <source src="@media.Url" type="video/mp4">
                                                        Votre navigateur ne supporte pas la lecture de vidéos.
                                                    </video>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="text-center mb-3">
                                                    <i class="fas fa-file-alt text-muted" style="font-size: 3rem;"></i>
                                                    <p class="text-muted mt-2">Fichier: @System.IO.Path.GetFileName(media.Url)</p>
                                                </div>
                                            }
                                        </div>
                                        
                                        <div class="card-footer bg-light">
                                            <div class="d-flex justify-content-between">
                                                <button class="btn btn-success btn-sm" onclick="validerMedia('@media.Id', true)">
                                                    <i class="fas fa-check me-1"></i>
                                                    Valider
                                                </button>
                                                <button class="btn btn-danger btn-sm" onclick="validerMedia('@media.Id', false)">
                                                    <i class="fas fa-times me-1"></i>
                                                    Rejeter
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal pour commentaire -->
<div class="modal fade" id="commentaireModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Commentaire de validation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="commentaireText" class="form-label">Commentaire (optionnel):</label>
                    <textarea class="form-control" id="commentaireText" rows="3" placeholder="Ajouter un commentaire..."></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-primary" id="confirmValidation">Confirmer</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let currentMediaId = null;
        let currentValidation = null;

        function validerMedia(mediaId, valide) {
            currentMediaId = mediaId;
            currentValidation = valide;
            
            // Afficher le modal pour le commentaire
            $('#commentaireModal').modal('show');
        }

        $('#confirmValidation').click(function() {
            const commentaire = $('#commentaireText').val();
            
            $.ajax({
                url: '@Url.Action("ValiderMedia", "Validation")',
                type: 'POST',
                data: {
                    mediaId: currentMediaId,
                    valide: currentValidation,
                    commentaire: commentaire
                },
                success: function(response) {
                    if (response.success) {
                        // Afficher un message de succès
                        showAlert('success', response.message);
                        
                        // Recharger la page après un délai
                        setTimeout(function() {
                            location.reload();
                        }, 1500);
                    } else {
                        showAlert('danger', response.message);
                    }
                },
                error: function() {
                    showAlert('danger', 'Erreur lors de la validation du média.');
                }
            });
            
            // Fermer le modal
            $('#commentaireModal').modal('hide');
            $('#commentaireText').val('');
        });

        function showAlert(type, message) {
            const alertHtml = `
                <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                    <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-triangle'} me-2"></i>
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;
            
            // Supprimer les anciennes alertes
            $('.alert').remove();
            
            // Ajouter la nouvelle alerte en haut de la page
            $('.card-body').prepend(alertHtml);
        }
    </script>
} 