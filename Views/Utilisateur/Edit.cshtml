@model DiversityPub.Models.Utilisateur
@{
    ViewData["Title"] = "Modifier l'Utilisateur";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-user-edit"></i> Modifier l'Utilisateur
                </h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Nom" class="form-label">
                                    <i class="fas fa-user"></i> Nom de famille
                                </label>
                                <input asp-for="Nom" class="form-control" required />
                                <span asp-validation-for="Nom" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Prenom" class="form-label">
                                    <i class="fas fa-user"></i> Prénom
                                </label>
                                <input asp-for="Prenom" class="form-control" required />
                                <span asp-validation-for="Prenom" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">
                                    <i class="fas fa-envelope"></i> Adresse email
                                </label>
                                <input asp-for="Email" type="email" class="form-control" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Role" class="form-label">
                                    <i class="fas fa-user-tag"></i> Rôle
                                </label>
                                <select asp-for="Role" class="form-select" id="roleSelect" required>
                                    <option value="">Sélectionner un rôle</option>
                                    <option value="@DiversityPub.Models.enums.Role.Admin">Administrateur</option>
                                    <option value="@DiversityPub.Models.enums.Role.ChefProjet">Chef de projet</option>
                                    <option value="@DiversityPub.Models.enums.Role.Client">Client</option>
                                    <option value="@DiversityPub.Models.enums.Role.AgentTerrain">Agent terrain</option>
                                </select>
                                <span asp-validation-for="Role" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="MotDePasse" class="form-label">
                            <i class="fas fa-lock"></i> Nouveau mot de passe (optionnel)
                        </label>
                        <input type="password" class="form-control" id="MotDePasse" name="MotDePasse" />
                        <small class="text-muted">Laissez vide pour conserver le mot de passe actuel</small>
                    </div>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Erreurs de validation :</strong>
                            <ul class="mb-0">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }

                    <!-- Section profil Client -->
                    <div class="profile-section" id="clientProfile" style="display: @(Model.Role == DiversityPub.Models.enums.Role.Client ? "block" : "none");">
                        <h5><i class="fas fa-building"></i> Profil Client</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="clientRaisonSociale" class="form-label">Raison sociale</label>
                                    <input type="text" class="form-control" id="clientRaisonSociale" name="clientRaisonSociale" 
                                           value="@(Model.Client?.RaisonSociale)" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="clientTelephone" class="form-label">Téléphone</label>
                                    <input type="tel" class="form-control" id="clientTelephone" name="clientTelephone" 
                                           value="@(Model.Client?.TelephoneContactPrincipal)" />
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="clientAdresse" class="form-label">Adresse</label>
                            <textarea class="form-control" id="clientAdresse" name="clientAdresse" rows="2">@(Model.Client?.Adresse)</textarea>
                        </div>
                    </div>

                    <!-- Section profil Agent Terrain -->
                    <div class="profile-section" id="agentProfile" style="display: @(Model.Role == DiversityPub.Models.enums.Role.AgentTerrain ? "block" : "none");">
                        <h5><i class="fas fa-user-tie"></i> Profil Agent Terrain</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="agentTelephone" class="form-label">Téléphone</label>
                                    <input type="tel" class="form-control" id="agentTelephone" name="agentTelephone" 
                                           value="@(Model.AgentTerrain?.Telephone)" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="agentEmail" class="form-label">Email professionnel</label>
                                    <input type="email" class="form-control" id="agentEmail" name="agentEmail" 
                                           value="@(Model.AgentTerrain?.Email)" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        <strong>Important :</strong> Un utilisateur ne peut avoir qu'un seul rôle. 
                        Les profils spécifiques (Client ou Agent Terrain) seront mis à jour selon le rôle sélectionné.
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Index", "Utilisateur")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Retour
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Enregistrer les modifications
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Gestion des profils selon le rôle
        document.getElementById('roleSelect').addEventListener('change', function() {
            const role = this.value;
            const clientProfile = document.getElementById('clientProfile');
            const agentProfile = document.getElementById('agentProfile');
            
            // Masquer tous les profils
            clientProfile.style.display = 'none';
            agentProfile.style.display = 'none';
            
            // Afficher le profil approprié
            if (role === '@DiversityPub.Models.enums.Role.Client') {
                clientProfile.style.display = 'block';
            } else if (role === '@DiversityPub.Models.enums.Role.AgentTerrain') {
                agentProfile.style.display = 'block';
            }
        });
    </script>
} 