@model IEnumerable<DiversityPub.Models.Utilisateur>
@{
    ViewData["Title"] = "Gestion des Utilisateurs";
}

<!-- Messages de migration -->
@if (TempData["MigrationResult"] != null)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        <h5><i class="fas fa-shield-alt"></i> Résultat de la Migration des Mots de Passe</h5>
        <pre style="white-space: pre-wrap; font-size: 0.9rem; margin: 0;">@TempData["MigrationResult"]</pre>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="mb-0">
                    <i class="fas fa-users"></i> Gestion des Utilisateurs
                </h4>
                <div>
                    @if (User.IsInRole("Admin"))
                    {
                        <form asp-action="MigrerMotsDePasse" method="post" style="display: inline;" class="me-2">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-warning" onclick="return confirm('Êtes-vous sûr de vouloir migrer tous les mots de passe ? Cette action est irréversible.')">
                                <i class="fas fa-shield-alt"></i> Migrer Mots de Passe
                            </button>
                        </form>
                        <a href="@Url.Action("Import", "Utilisateur")" class="btn btn-info me-2">
                            <i class="fas fa-file-excel"></i> Importer Excel
                        </a>
                        <a href="@Url.Action("Create", "Utilisateur")" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Nouvel Utilisateur
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Grille de cards utilisateurs -->
<div class="row">
    @foreach (var utilisateur in Model.Where(u => u.Supprimer == 0))
    {
        <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <div class="avatar-circle me-3">
                            <span class="avatar-text">@utilisateur.Prenom.Substring(0, 1)@utilisateur.Nom.Substring(0, 1)</span>
                        </div>
                        <div>
                            <h6 class="mb-0">@utilisateur.Prenom @utilisateur.Nom</h6>
                            <small class="text-muted">
                                <i class="fas fa-envelope"></i> @utilisateur.Email
                            </small>
                        </div>
                    </div>
                    <div class="dropdown">
                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <i class="fas fa-ellipsis-v"></i>
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Details", "Utilisateur", new { id = utilisateur.Id })">
                                    <i class="fas fa-eye text-info"></i> Voir détails
                                </a>
                            </li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Edit", "Utilisateur", new { id = utilisateur.Id })">
                                        <i class="fas fa-edit text-warning"></i> Modifier
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item text-danger" href="@Url.Action("Delete", "Utilisateur", new { id = utilisateur.Id })">
                                        <i class="fas fa-trash"></i> Supprimer
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-6">
                            <small class="text-muted">Rôle</small>
                            <div>
                                @switch (utilisateur.Role)
                                {
                                    case DiversityPub.Models.enums.Role.Admin:
                                        <span class="badge bg-danger">Admin</span>
                                        break;
                                    case DiversityPub.Models.enums.Role.ChefProjet:
                                        <span class="badge bg-warning">Chef Projet</span>
                                        break;
                                    case DiversityPub.Models.enums.Role.Client:
                                        <span class="badge bg-info">Client</span>
                                        break;
                                    case DiversityPub.Models.enums.Role.AgentTerrain:
                                        <span class="badge bg-success">Agent Terrain</span>
                                        break;
                                }
                            </div>
                        </div>
                        <div class="col-6">
                            <small class="text-muted">Statut</small>
                            <div>
                                <span class="badge bg-success">Actif</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <small class="text-muted">Profil</small>
                        <div>
                            @if (utilisateur.Client != null)
                            {
                                <small>
                                    <i class="fas fa-building text-primary"></i> @utilisateur.Client.RaisonSociale
                                </small>
                            }
                            else if (utilisateur.AgentTerrain != null)
                            {
                                <small>
                                    <i class="fas fa-user-tie text-success"></i> Agent Terrain
                                </small>
                            }
                            else
                            {
                                <small class="text-muted">-</small>
                            }
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <small class="text-muted">Contact</small>
                        <div>
                            @if (utilisateur.Client != null)
                            {
                                <small>
                                    <i class="fas fa-phone text-primary"></i> @utilisateur.Client.TelephoneContactPrincipal
                                </small>
                            }
                            else if (utilisateur.AgentTerrain != null)
                            {
                                <small>
                                    <i class="fas fa-phone text-primary"></i> @utilisateur.AgentTerrain.Telephone
                                </small>
                            }
                            else
                            {
                                <small class="text-muted">-</small>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent">
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">ID: @utilisateur.Id.ToString().Substring(0, 8)...</small>
                        <div class="btn-group btn-group-sm">
                            <a href="@Url.Action("Details", "Utilisateur", new { id = utilisateur.Id })" 
                               class="btn btn-outline-info" title="Détails">
                                <i class="fas fa-eye"></i>
                            </a>
                            @if (User.IsInRole("Admin"))
                            {
                                <a href="@Url.Action("Edit", "Utilisateur", new { id = utilisateur.Id })" 
                                   class="btn btn-outline-warning" title="Modifier">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="@Url.Action("Delete", "Utilisateur", new { id = utilisateur.Id })" 
                                   class="btn btn-outline-danger" title="Supprimer">
                                    <i class="fas fa-trash"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any(u => u.Supprimer == 0))
{
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body text-center py-5">
                    <i class="fas fa-users fa-3x text-muted mb-3"></i>
                    <h5>Aucun utilisateur trouvé</h5>
                    <p class="text-muted">Commencez par créer votre premier utilisateur.</p>
                    @if (User.IsInRole("Admin"))
                    {
                        <a href="@Url.Action("Create", "Utilisateur")" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Créer un utilisateur
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
}

<style>
.avatar-circle {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: linear-gradient(135deg, #A32D18, #EDAC00);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: bold;
    font-size: 14px;
}

.avatar-text {
    text-transform: uppercase;
}

.card {
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
}

.card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0,0,0,0.1) !important;
}

.badge {
    font-size: 0.75rem;
}
</style> 