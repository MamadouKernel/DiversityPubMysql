@model DiversityPub.Models.Utilisateur
@{
    ViewData["Title"] = "Mon Profil";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">
                    <i class="fas fa-user-circle text-primary"></i> Mon Profil
                </h2>
                <div>
                    <a href="@Url.Action("Edit", "Profile")" class="btn btn-warning me-2">
                        <i class="fas fa-edit"></i> Modifier
                    </a>
                    <a href="@Url.Action("ChangePassword", "Profile")" class="btn btn-info">
                        <i class="fas fa-key"></i> Changer mot de passe
                    </a>
                </div>
            </div>

            <!-- Messages -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i>
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle"></i>
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="row">
                <!-- Informations Générales -->
                <div class="col-lg-8">
                    <div class="card mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-info-circle"></i> Informations Générales
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">
                                            <i class="fas fa-user text-muted"></i> Nom complet
                                        </label>
                                        <p class="form-control-plaintext">@Model.Prenom @Model.Nom</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">
                                            <i class="fas fa-envelope text-muted"></i> Email
                                        </label>
                                        <p class="form-control-plaintext">@Model.Email</p>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">
                                            <i class="fas fa-user-tag text-muted"></i> Rôle
                                        </label>
                                        <p class="form-control-plaintext">
                                            <span class="badge bg-primary">@Model.Role.ToString()</span>
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">
                                            <i class="fas fa-calendar text-muted"></i> Statut du compte
                                        </label>
                                        <p class="form-control-plaintext">
                                            @if (Model.Supprimer == 0)
                                            {
                                                <span class="badge bg-success">Actif</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Désactivé</span>
                                            }
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Profil Spécifique -->
                    @if (Model.Client != null)
                    {
                        <div class="card mb-4">
                            <div class="card-header bg-success text-white">
                                <h5 class="mb-0">
                                    <i class="fas fa-building"></i> Profil Client
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label fw-bold">Raison sociale</label>
                                            <p class="form-control-plaintext">@Model.Client.RaisonSociale</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label fw-bold">
                                                <i class="fas fa-phone text-muted"></i> Téléphone
                                            </label>
                                            <p class="form-control-plaintext">@Model.Client.TelephoneContactPrincipal</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-map-marker-alt text-muted"></i> Adresse
                                    </label>
                                    <p class="form-control-plaintext">@Model.Client.Adresse</p>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label fw-bold">Contact principal</label>
                                            <p class="form-control-plaintext">@Model.Client.NomContactPrincipal</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label fw-bold">Email contact</label>
                                            <p class="form-control-plaintext">@Model.Client.EmailContactPrincipal</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label fw-bold">Dirigeant</label>
                                            <p class="form-control-plaintext">@Model.Client.NomDirigeant</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label fw-bold">Registre commerce</label>
                                            <p class="form-control-plaintext">@Model.Client.RegistreCommerce</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else if (Model.AgentTerrain != null)
                    {
                        <div class="card mb-4">
                            <div class="card-header bg-info text-white">
                                <h5 class="mb-0">
                                    <i class="fas fa-user-tie"></i> Profil Agent Terrain
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label fw-bold">
                                                <i class="fas fa-phone text-muted"></i> Téléphone
                                            </label>
                                            <p class="form-control-plaintext">@Model.AgentTerrain.Telephone</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label fw-bold">
                                                <i class="fas fa-envelope text-muted"></i> Email professionnel
                                            </label>
                                            <p class="form-control-plaintext">@Model.AgentTerrain.Email</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Sidebar -->
                <div class="col-lg-4">
                    <!-- Actions Rapides -->
                    <div class="card mb-4">
                        <div class="card-header bg-secondary text-white">
                            <h6 class="mb-0">
                                <i class="fas fa-bolt"></i> Actions Rapides
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a href="@Url.Action("Edit", "Profile")" class="btn btn-outline-warning">
                                    <i class="fas fa-edit"></i> Modifier mon profil
                                </a>
                                <a href="@Url.Action("ChangePassword", "Profile")" class="btn btn-outline-info">
                                    <i class="fas fa-key"></i> Changer mot de passe
                                </a>
                                @if (User.IsInRole("AgentTerrain"))
                                {
                                    <a href="@Url.Action("Missions", "AgentTerrain")" class="btn btn-outline-primary">
                                        <i class="fas fa-tasks"></i> Mes activations
                                    </a>
                                }
                                @if (User.IsInRole("Client"))
                                {
                                    <a href="@Url.Action("Index", "ClientDashboard")" class="btn btn-outline-success">
                                        <i class="fas fa-chart-line"></i> Mon tableau de bord
                                    </a>
                                }
                                @if (User.IsInRole("Admin") || User.IsInRole("ChefProjet"))
                                {
                                    <a href="@Url.Action("Index", "Dashboard")" class="btn btn-outline-primary">
                                        <i class="fas fa-tachometer-alt"></i> Tableau de bord
                                    </a>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Informations de Sécurité -->
                    <div class="card">
                        <div class="card-header bg-warning text-dark">
                            <h6 class="mb-0">
                                <i class="fas fa-shield-alt"></i> Sécurité
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i>
                                <strong>Conseil :</strong> Changez régulièrement votre mot de passe pour maintenir la sécurité de votre compte.
                            </div>
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle"></i>
                                <strong>Important :</strong> Ne partagez jamais vos identifiants de connexion.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 