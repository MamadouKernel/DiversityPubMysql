@model DiversityPub.Models.Utilisateur
@{
    ViewData["Title"] = "Modifier Mon Profil";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">
                    <i class="fas fa-user-edit text-warning"></i> Modifier Mon Profil
                </h2>
                <a href="@Url.Action("Index", "Profile")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour
                </a>
            </div>

            <!-- Messages -->
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle"></i>
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="fas fa-edit"></i> Informations Personnelles
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        
                        <!-- Informations Générales -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Nom" class="form-label">
                                        <i class="fas fa-user"></i> Nom de famille
                                    </label>
                                    <input asp-for="Nom" class="form-control" required />
                                    <span asp-validation-for="Nom" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Prenom" class="form-label">
                                        <i class="fas fa-user"></i> Prénom
                                    </label>
                                    <input asp-for="Prenom" class="form-control" required />
                                    <span asp-validation-for="Prenom" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label">
                                        <i class="fas fa-envelope"></i> Email
                                    </label>
                                    <input asp-for="Email" type="email" class="form-control" required />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="MotDePasse" class="form-label">
                                        <i class="fas fa-key"></i> Nouveau mot de passe (optionnel)
                                    </label>
                                    <input type="password" id="MotDePasse" name="MotDePasse" class="form-control" />
                                    <small class="form-text text-muted">Laissez vide pour conserver l'actuel</small>
                                </div>
                            </div>
                        </div>

                        <!-- Profil Client -->
                        @if (Model.Role == DiversityPub.Models.enums.Role.Client && Model.Client != null)
                        {
                            <hr class="my-4">
                            <h5 class="text-success mb-3">
                                <i class="fas fa-building"></i> Informations Client
                            </h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="clientRaisonSociale" class="form-label">Raison sociale</label>
                                        <input type="text" class="form-control" id="clientRaisonSociale" name="clientRaisonSociale" 
                                               value="@Model.Client.RaisonSociale" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="clientTelephone" class="form-label">
                                            <i class="fas fa-phone"></i> Téléphone
                                        </label>
                                        <input type="tel" class="form-control" id="clientTelephone" name="clientTelephone" 
                                               value="@Model.Client.TelephoneContactPrincipal" />
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="clientAdresse" class="form-label">
                                    <i class="fas fa-map-marker-alt"></i> Adresse
                                </label>
                                <textarea class="form-control" id="clientAdresse" name="clientAdresse" rows="3">@Model.Client.Adresse</textarea>
                            </div>
                        }

                        <!-- Profil Agent Terrain -->
                        @if (Model.Role == DiversityPub.Models.enums.Role.AgentTerrain && Model.AgentTerrain != null)
                        {
                            <hr class="my-4">
                            <h5 class="text-info mb-3">
                                <i class="fas fa-user-tie"></i> Informations Agent Terrain
                            </h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="agentTelephone" class="form-label">
                                            <i class="fas fa-phone"></i> Téléphone
                                        </label>
                                        <input type="tel" class="form-control" id="agentTelephone" name="agentTelephone" 
                                               value="@Model.AgentTerrain.Telephone" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="agentEmail" class="form-label">
                                            <i class="fas fa-envelope"></i> Email professionnel
                                        </label>
                                        <input type="email" class="form-control" id="agentEmail" name="agentEmail" 
                                               value="@Model.AgentTerrain.Email" />
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- Informations de Sécurité -->
                        <hr class="my-4">
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <strong>Note :</strong> Vous ne pouvez modifier que vos informations personnelles. 
                            Le rôle et les permissions sont gérés par l'administrateur.
                        </div>

                        <!-- Boutons d'action -->
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index", "Profile")" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Enregistrer les modifications
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

 