@model DiversityPub.Models.Activation
@{
    ViewData["Title"] = "Détails de l'Activation";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="mb-0">
                    <i class="fas fa-map-marker-alt"></i> Détails de l'Activation
                </h4>
                <div>
                    <a href="@Url.Action("Activations", "ClientDashboard")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Retour aux Activations
                    </a>
                </div>
            </div>
            <div class="card-body">
                <!-- Informations générales -->
                <div class="row mb-4">
                    <div class="col-md-8">
                        <h5 class="text-primary">@Model.Nom</h5>
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <p class="text-muted">@Model.Description</p>
                        }
                    </div>
                    <div class="col-md-4 text-end">
                        <span class="badge bg-@(Model.Statut switch {
                            DiversityPub.Models.enums.StatutActivation.Planifiee => "warning",
                            DiversityPub.Models.enums.StatutActivation.EnCours => "success",
                            DiversityPub.Models.enums.StatutActivation.Suspendue => "danger",
                            DiversityPub.Models.enums.StatutActivation.Terminee => "info",
                            _ => "secondary"
                        }) fs-6">@Model.Statut</span>
                    </div>
                </div>

                <!-- Détails de l'activation -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="card mb-3">
                            <div class="card-header">
                                <h6 class="mb-0"><i class="fas fa-info-circle"></i> Informations Générales</h6>
                            </div>
                            <div class="card-body">
                                <div class="row mb-2">
                                    <div class="col-4"><strong>Campagne :</strong></div>
                                    <div class="col-8">@Model.Campagne?.Nom</div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-4"><strong>Lieu :</strong></div>
                                    <div class="col-8">@Model.Lieu?.Nom - @Model.Lieu?.Adresse</div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-4"><strong>Date :</strong></div>
                                    <div class="col-8">@Model.DateActivation.ToString("dd/MM/yyyy")</div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-4"><strong>Heures :</strong></div>
                                    <div class="col-8">
                                        @(Model.HeureDebut.Hours.ToString("00") + ":" + Model.HeureDebut.Minutes.ToString("00")) - 
                                        @(Model.HeureFin.Hours.ToString("00") + ":" + Model.HeureFin.Minutes.ToString("00"))
                                    </div>
                                </div>
                                @if (!string.IsNullOrEmpty(Model.Instructions))
                                {
                                    <div class="row mb-2">
                                        <div class="col-4"><strong>Instructions :</strong></div>
                                        <div class="col-8">@Model.Instructions</div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card mb-3">
                            <div class="card-header">
                                <h6 class="mb-0"><i class="fas fa-users"></i> Équipe</h6>
                            </div>
                            <div class="card-body">
                                <div class="row mb-2">
                                    <div class="col-4"><strong>Responsable :</strong></div>
                                    <div class="col-8">
                                        @if (Model.Responsable?.Utilisateur != null)
                                        {
                                            @($"{Model.Responsable.Utilisateur.Prenom} {Model.Responsable.Utilisateur.Nom}")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Non assigné</span>
                                        }
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-4"><strong>Agents :</strong></div>
                                    <div class="col-8">
                                        @if (Model.AgentsTerrain?.Any() == true)
                                        {
                                            <ul class="list-unstyled mb-0">
                                                @foreach (var agent in Model.AgentsTerrain)
                                                {
                                                    <li><i class="fas fa-user"></i> @($"{agent.Utilisateur.Prenom} {agent.Utilisateur.Nom}")</li>
                                                }
                                            </ul>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Aucun agent assigné</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Médias -->
                <div class="card mb-3">
                    <div class="card-header">
                        <h6 class="mb-0"><i class="fas fa-images"></i> Médias 
                            @if (Model.Medias?.Any() == true)
                            {
                                <span>(@Model.Medias.Count)</span>
                            }
                        </h6>
                    </div>
                    <div class="card-body">
                        @if (Model.Medias?.Any() == true)
                        {
                            <div class="row">
                                @foreach (var media in Model.Medias)
                                {
                                    <div class="col-md-4 mb-3">
                                        <div class="card h-100">
                                            <div class="card-body text-center">
                                                @if (media.Type == DiversityPub.Models.enums.TypeMedia.Photo)
                                                {
                                                    <div class="mb-3">
                                                        <img src="@media.Url" alt="@media.Description" class="img-fluid rounded" style="max-height: 200px; object-fit: cover;" />
                                                    </div>
                                                }
                                                else if (media.Type == DiversityPub.Models.enums.TypeMedia.Video)
                                                {
                                                    <i class="fas fa-video fa-3x text-info mb-3"></i>
                                                }
                                                else
                                                {
                                                    <i class="fas fa-file-alt fa-3x text-warning mb-3"></i>
                                                }
                                                
                                                <h6 class="card-title">@media.Description</h6>
                                                <p class="text-muted small mb-3">
                                                    <i class="fas fa-calendar"></i> @media.DateUpload.ToString("dd/MM/yyyy")
                                                    <br>
                                                    <span class="badge 
                                                        @(media.Type == DiversityPub.Models.enums.TypeMedia.Photo ? "bg-success" : 
                                                          media.Type == DiversityPub.Models.enums.TypeMedia.Video ? "bg-info" : "bg-warning")">
                                                        @media.Type
                                                    </span>
                                                    <span class="badge bg-success ms-1">
                                                        <i class="fas fa-check"></i> Validé
                                                    </span>
                                                </p>
                                                
                                                <div class="d-grid gap-2">
                                                    @if (media.Type == DiversityPub.Models.enums.TypeMedia.Photo)
                                                    {
                                                        <a href="@media.Url" target="_blank" class="btn btn-primary btn-sm">
                                                            <i class="fas fa-eye"></i> Voir l'image
                                                        </a>
                                                    }
                                                    else if (media.Type == DiversityPub.Models.enums.TypeMedia.Video)
                                                    {
                                                        <a href="@media.Url" target="_blank" class="btn btn-info btn-sm">
                                                            <i class="fas fa-play"></i> Voir la vidéo
                                                        </a>
                                                    }
                                                    
                                                    <a href="@media.Url" download class="btn btn-outline-secondary btn-sm">
                                                        <i class="fas fa-download"></i> Télécharger
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="fas fa-images fa-3x text-muted mb-3"></i>
                                <h6 class="text-muted">Aucun média validé</h6>
                                <p class="text-muted small">Les preuves n'ont pas encore été validées ou aucune preuve n'a été fournie pour cette activation.</p>
                            </div>
                        }
                    </div>
                </div>

                <!-- Incidents -->
                @if (Model.Incidents?.Any() == true)
                {
                    <div class="card mb-3">
                        <div class="card-header">
                            <h6 class="mb-0"><i class="fas fa-exclamation-triangle text-warning"></i> Incidents (@Model.Incidents.Count)</h6>
                        </div>
                        <div class="card-body">
                            @foreach (var incident in Model.Incidents)
                            {
                                <div class="alert alert-warning mb-2">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <strong>@incident.Titre</strong>
                                            <br>
                                            <small class="text-muted">@incident.Description</small>
                                        </div>
                                        <small class="text-muted">@incident.DateCreation.ToString("dd/MM/yyyy HH:mm")</small>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }

                <!-- Feedbacks -->
                @if (Model.Feedbacks?.Any() == true)
                {
                    <div class="card mb-3">
                        <div class="card-header">
                            <h6 class="mb-0"><i class="fas fa-comments"></i> Feedbacks (@Model.Feedbacks.Count)</h6>
                        </div>
                        <div class="card-body">
                            @foreach (var feedback in Model.Feedbacks)
                            {
                                <div class="border rounded p-3 mb-2">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <div class="mb-1">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    if (i <= feedback.Note)
                                                    {
                                                        <i class="fas fa-star text-warning"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="far fa-star text-muted"></i>
                                                    }
                                                }
                                                <span class="ms-2">@feedback.Note/5</span>
                                            </div>
                                            <p class="mb-1">@feedback.Commentaire</p>
                                            <small class="text-muted">@feedback.DateFeedback.ToString("dd/MM/yyyy HH:mm")</small>
                                        </div>
                                    </div>
                                    @if (!string.IsNullOrEmpty(feedback.ReponseAdmin))
                                    {
                                        <div class="mt-2 p-2 bg-light rounded">
                                            <small class="text-muted"><strong>Réponse :</strong></small>
                                            <p class="mb-0 small">@feedback.ReponseAdmin</p>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                }

                <!-- Actions -->
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="d-flex justify-content-between">
                            <div>
                                @if (Model.Statut == DiversityPub.Models.enums.StatutActivation.Terminee)
                                {
                                    <a href="@Url.Action("CreateFeedback", "ClientDashboard", new { activationId = Model.Id })" 
                                       class="btn btn-primary">
                                        <i class="fas fa-comment"></i> Donner un Feedback
                                    </a>
                                }
                            </div>
                            <div>
                                <a href="@Url.Action("DetailsCampagne", "ClientDashboard", new { id = Model.CampagneId })" 
                                   class="btn btn-outline-secondary">
                                    <i class="fas fa-bullhorn"></i> Voir la Campagne
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 