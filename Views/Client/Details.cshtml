@using DiversityPub.Models.enums
@model DiversityPub.Models.Client
@{
    ViewData["Title"] = "Détails du Client";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="mb-0">
                    <i class="fas fa-building"></i> Détails du Client
                </h4>
                <div>
                    <a href="@Url.Action("Edit", "Client", new { id = Model.Id })" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Modifier
                    </a>
                    <a href="@Url.Action("Index", "Client")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Retour
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <h5 class="text-primary mb-3">Informations de l'entreprise</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Raison Sociale</label>
                                    <p class="form-control-plaintext">@Model.RaisonSociale</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Registre de Commerce</label>
                                    <p class="form-control-plaintext">
                                        @(string.IsNullOrEmpty(Model.RegistreCommerce) ? "Non renseigné" : Model.RegistreCommerce)
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Adresse</label>
                            <p class="form-control-plaintext">@Model.Adresse</p>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Dirigeant</label>
                                    <p class="form-control-plaintext">@Model.NomDirigeant</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Contact Principal</label>
                                    <p class="form-control-plaintext">@Model.NomContactPrincipal</p>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Email</label>
                                    <p class="form-control-plaintext">
                                        <a href="mailto:@Model.EmailContactPrincipal">@Model.EmailContactPrincipal</a>
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Téléphone</label>
                                    <p class="form-control-plaintext">
                                        <a href="tel:@Model.TelephoneContactPrincipal">@Model.TelephoneContactPrincipal</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <h5 class="text-primary mb-3">Compte Utilisateur</h5>
                        <div class="card bg-light">
                            <div class="card-body">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Email de connexion</label>
                                    <p class="form-control-plaintext">@(Model.Utilisateur?.Email ?? "N/A")</p>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Rôle</label>
                                    <p class="form-control-plaintext">
                                        <span class="badge bg-info">@(Model.Utilisateur?.Role.ToString() ?? "N/A")</span>
                                    </p>
                                </div>
                                <div class="alert alert-warning">
                                    <i class="fas fa-key"></i>
                                    <strong>Mot de passe par défaut :</strong> Client123!
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                @if (Model.Campagnes.Any())
                {
                    <hr class="my-4">
                    <h5 class="text-primary mb-3">Campagnes associées</h5>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>Nom</th>
                                    <th>Date de début</th>
                                    <th>Date de fin</th>
                                    <th>Statut</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var campagne in Model.Campagnes.OrderByDescending(c => c.DateDebut))
                                {
                                    <tr>
                                        <td><strong>@campagne.Nom</strong></td>
                                        <td>@campagne.DateDebut.ToString("dd/MM/yyyy")</td>
                                        <td>@campagne.DateFin.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <span class="badge bg-@(campagne.Statut switch {
                                                StatutCampagne.EnPreparation => "warning",
                                                StatutCampagne.EnCours => "primary",
                                                StatutCampagne.Terminee => "success",
                                                StatutCampagne.Annulee => "danger",
                                                _ => "secondary"
                                            })">@campagne.Statut</span>
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Details", "Campagne", new { id = campagne.Id })" 
                                               class="btn btn-sm btn-outline-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <hr class="my-4">
                    <div class="text-center py-3">
                        <i class="fas fa-bullhorn fa-2x text-muted mb-2"></i>
                        <h6 class="text-muted">Aucune campagne associée</h6>
                        <p class="text-muted">Ce client n'a pas encore de campagnes.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div> 