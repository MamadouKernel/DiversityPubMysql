@model DiversityPub.Models.Client
@{
    ViewData["Title"] = "Créer un Client";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-plus"></i> Créer un Nouveau Client
                </h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="RaisonSociale" class="form-label">
                                    <i class="fas fa-building"></i> Raison Sociale *
                                </label>
                                <input asp-for="RaisonSociale" class="form-control" required />
                                <span asp-validation-for="RaisonSociale" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="RegistreCommerce" class="form-label">
                                    <i class="fas fa-file-contract"></i> Registre de Commerce
                                </label>
                                <input asp-for="RegistreCommerce" class="form-control" />
                                <span asp-validation-for="RegistreCommerce" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Adresse" class="form-label">
                            <i class="fas fa-map-marker-alt"></i> Adresse *
                        </label>
                        <textarea asp-for="Adresse" class="form-control" rows="2" required 
                                  placeholder="Adresse complète de l'entreprise..."></textarea>
                        <span asp-validation-for="Adresse" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="NomDirigeant" class="form-label">
                                    <i class="fas fa-user-tie"></i> Nom du Dirigeant *
                                </label>
                                <input asp-for="NomDirigeant" class="form-control" required />
                                <span asp-validation-for="NomDirigeant" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="NomContactPrincipal" class="form-label">
                                    <i class="fas fa-user"></i> Nom du Contact Principal *
                                </label>
                                <input asp-for="NomContactPrincipal" class="form-control" required />
                                <span asp-validation-for="NomContactPrincipal" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="EmailContactPrincipal" class="form-label">
                                    <i class="fas fa-envelope"></i> Email du Contact *
                                </label>
                                <input asp-for="EmailContactPrincipal" type="email" class="form-control" required />
                                <span asp-validation-for="EmailContactPrincipal" class="text-danger"></span>
                                <small class="text-muted">Cet email sera utilisé pour la connexion du client</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="TelephoneContactPrincipal" class="form-label">
                                    <i class="fas fa-phone"></i> Téléphone du Contact *
                                </label>
                                <input asp-for="TelephoneContactPrincipal" class="form-control" required />
                                <span asp-validation-for="TelephoneContactPrincipal" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        <strong>Note :</strong> Un compte utilisateur sera automatiquement créé pour ce client avec :
                        <ul class="mb-0 mt-2">
                            <li><strong>Email :</strong> L'email du contact principal</li>
                            <li><strong>Mot de passe par défaut :</strong> Client123!</li>
                            <li><strong>Rôle :</strong> Client</li>
                        </ul>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Index", "Client")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Retour
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Créer le client
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 