@model IEnumerable<DiversityPub.Models.Client>
@{
    ViewData["Title"] = "Gestion des Clients";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="mb-0">
                    <i class="fas fa-building"></i> Gestion des Clients
                </h4>
                <div class="d-flex gap-2">
                    <a href="@Url.Action("AnalyzeExistingClients", "Client")" class="btn btn-warning btn-sm">
                        <i class="fas fa-chart-bar"></i> Analyser utilisateurs
                    </a>
                    <a href="@Url.Action("ResetClientPasswords", "Client")" class="btn btn-danger btn-sm">
                        <i class="fas fa-key"></i> Réinitialiser mots de passe
                    </a>
                    <a href="@Url.Action("Create", "Client")" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Nouveau Client
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body text-center py-5">
                    <i class="fas fa-building fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Aucun client enregistré</h5>
                    <p class="text-muted">Commencez par créer votre premier client.</p>
                    <div class="d-flex justify-content-center gap-2 flex-wrap">
                        <a href="@Url.Action("Create", "Client")" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Créer le premier client
                        </a>
                        <a href="@Url.Action("CreateTestClient", "Client")" class="btn btn-success">
                            <i class="fas fa-magic"></i> Créer un client de test
                        </a>
                        <a href="@Url.Action("AnalyzeExistingClients", "Client")" class="btn btn-warning">
                            <i class="fas fa-chart-bar"></i> Analyser utilisateurs existants
                        </a>
                        <a href="@Url.Action("ResetClientPasswords", "Client")" class="btn btn-danger">
                            <i class="fas fa-key"></i> Réinitialiser mots de passe
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <!-- Grille de cards clients -->
    <div class="row">
        @foreach (var client in Model)
        {
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card h-100 shadow-sm client-card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <div class="client-avatar me-3">
                                <i class="fas fa-building"></i>
                            </div>
                            <div>
                                <h6 class="mb-0">@client.RaisonSociale</h6>
                                @if (!string.IsNullOrEmpty(client.RegistreCommerce))
                                {
                                    <small class="text-muted">RC: @client.RegistreCommerce</small>
                                }
                            </div>
                        </div>
                        <div class="dropdown">
                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="fas fa-ellipsis-v"></i>
                            </button>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Details", "Client", new { id = client.Id })">
                                        <i class="fas fa-eye text-info"></i> Voir détails
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Edit", "Client", new { id = client.Id })">
                                        <i class="fas fa-edit text-warning"></i> Modifier
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item text-danger" href="@Url.Action("Delete", "Client", new { id = client.Id })">
                                        <i class="fas fa-trash"></i> Supprimer
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-6">
                                <small class="text-muted">Dirigeant</small>
                                <div>
                                    <small><i class="fas fa-user-tie text-primary"></i> @client.NomDirigeant</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">Campagnes</small>
                                <div>
                                    <span class="badge bg-info">@ViewBag.NombreCampagnes[client.Id]</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <small class="text-muted">Contact Principal</small>
                            <div>
                                <small><i class="fas fa-user text-success"></i> @client.NomContactPrincipal</small>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <small class="text-muted">Email</small>
                            <div>
                                <small>
                                    <i class="fas fa-envelope text-primary"></i> 
                                    <a href="mailto:@client.EmailContactPrincipal" class="text-decoration-none">
                                        @client.EmailContactPrincipal
                                    </a>
                                </small>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <small class="text-muted">Téléphone</small>
                            <div>
                                <small>
                                    <i class="fas fa-phone text-success"></i> 
                                    <a href="tel:@client.TelephoneContactPrincipal" class="text-decoration-none">
                                        @client.TelephoneContactPrincipal
                                    </a>
                                </small>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="d-flex justify-content-end">
                            <div class="btn-group btn-group-sm">
                                <a href="@Url.Action("Details", "Client", new { id = client.Id })" 
                                   class="btn btn-outline-info" title="Détails">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="@Url.Action("Edit", "Client", new { id = client.Id })" 
                                   class="btn btn-outline-warning" title="Modifier">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="@Url.Action("Delete", "Client", new { id = client.Id })" 
                                   class="btn btn-outline-danger" title="Supprimer">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

<style>
.client-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: linear-gradient(135deg, #A32D18, #EDAC00);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 16px;
}

.client-card {
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
}

.client-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0,0,0,0.1) !important;
}

.badge {
    font-size: 0.75rem;
}

.card-header {
    background: linear-gradient(135deg, #f8f9fa, #e9ecef);
    border-bottom: 1px solid #dee2e6;
}

.btn-group-sm .btn {
    padding: 0.25rem 0.5rem;
    font-size: 0.875rem;
}
</style> 