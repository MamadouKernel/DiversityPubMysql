@model DiversityPub.Models.Lieu
@{
    ViewData["Title"] = "Supprimer le Lieu";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-trash"></i> Supprimer le Lieu
                </h4>
            </div>
            <div class="card-body">
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle"></i>
                    <strong>Attention :</strong> Êtes-vous sûr de vouloir supprimer ce lieu ?
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <h6 class="card-title">Informations du lieu</h6>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Nom</label>
                            <p class="form-control-plaintext">@Model.Nom</p>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Adresse</label>
                            <p class="form-control-plaintext">@Model.Adresse</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h6 class="card-title">Impact de la suppression</h6>
                        @if (Model.Activations.Any())
                        {
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle"></i>
                                <strong>Impossible de supprimer ce lieu</strong><br />
                                Ce lieu est utilisé par @Model.Activations.Count activation(s) :
                                <ul class="mt-2 mb-0">
                                    @foreach (var activation in Model.Activations.Take(5))
                                    {
                                        <li>@activation.Nom (@activation.DateActivation.ToString("dd/MM/yyyy"))</li>
                                    }
                                    @if (Model.Activations.Count > 5)
                                    {
                                        <li>... et @(Model.Activations.Count - 5) autres</li>
                                    }
                                </ul>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i>
                                <strong>Aucun impact</strong><br />
                                Ce lieu n'est utilisé par aucune activation.
                            </div>
                        }
                    </div>
                </div>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Index", "Lieu")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Annuler
                        </a>
                        @if (!Model.Activations.Any())
                        {
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Confirmer la suppression
                            </button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-danger" disabled>
                                <i class="fas fa-ban"></i> Impossible de supprimer
                            </button>
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 