@model DiversityPub.Models.Lieu
@{
    ViewData["Title"] = "Détails du Lieu";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="mb-0">
                    <i class="fas fa-map-marker-alt"></i> Détails du Lieu
                </h4>
                <div class="d-flex gap-2">
                    <a href="@Url.Action("Edit", "Lieu", new { id = Model.Id })" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Modifier
                    </a>
                    <a href="@Url.Action("Index", "Lieu")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Retour
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6 class="card-title">Informations du lieu</h6>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Nom</label>
                            <p class="form-control-plaintext">@Model.Nom</p>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Adresse</label>
                            <p class="form-control-plaintext">@Model.Adresse</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h6 class="card-title">Statistiques</h6>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Nombre d'activations</label>
                            <p class="form-control-plaintext">
                                <span class="badge bg-primary">@Model.Activations.Count</span>
                            </p>
                        </div>
                    </div>
                </div>

                @if (Model.Activations.Any())
                {
                    <hr />
                    <h6 class="card-title">Activations associées</h6>
                    <div class="row">
                        @foreach (var activation in Model.Activations.OrderByDescending(a => a.DateActivation))
                        {
                            <div class="col-md-6 col-lg-4 mb-3">
                                <div class="card">
                                    <div class="card-header d-flex justify-content-between align-items-center">
                                        <h6 class="mb-0">@activation.Nom</h6>
                                        @switch (activation.Statut)
                                        {
                                            case DiversityPub.Models.enums.StatutActivation.Planifiee:
                                                <span class="badge bg-warning">Planifiée</span>
                                                break;
                                            case DiversityPub.Models.enums.StatutActivation.EnCours:
                                                <span class="badge bg-success">En Cours</span>
                                                break;
                                            case DiversityPub.Models.enums.StatutActivation.Terminee:
                                                <span class="badge bg-info">Terminée</span>
                                                break;
                                        }
                                    </div>
                                    <div class="card-body">
                                        <p class="card-text">
                                            <small class="text-muted">
                                                <i class="fas fa-calendar"></i> @activation.DateActivation.ToString("dd/MM/yyyy")
                                            </small>
                                        </p>
                                        @if (!string.IsNullOrEmpty(activation.Description))
                                        {
                                            <p class="card-text text-muted">@activation.Description</p>
                                        }
                                        @if (activation.Campagne != null)
                                        {
                                            <p class="card-text">
                                                <small class="text-muted">
                                                    <i class="fas fa-bullhorn"></i> @activation.Campagne.Nom
                                                </small>
                                            </p>
                                        }
                                    </div>
                                    <div class="card-footer">
                                        <a href="@Url.Action("Details", "Activation", new { id = activation.Id })" 
                                           class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-eye"></i> Voir détails
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-calendar-times fa-2x text-muted mb-3"></i>
                        <h6>Aucune activation associée</h6>
                        <p class="text-muted">Ce lieu n'a pas encore été utilisé pour des activations.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div> 