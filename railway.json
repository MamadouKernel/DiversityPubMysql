{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "dotnet publish -c Release -o out"
  },
  "deploy": {
    "startCommand": "dotnet out/DiversityPub.dll",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "on_failure",
    "numReplicas": 1
  }
}
